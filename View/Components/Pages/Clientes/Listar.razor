@page "/clientes"
@using src.Model.Personas
@inject ProyectoGym.src.Controller.ClientesController ClientesController
@inject src.Model.Personas.Cliente Cliente


<h1>Listado clientes</h1>

<p>
    <a class="btn btn-primary" href="cliente/crear">Nuevo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Identificador
            </th>
            <th>
                Nombre cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var cliente in clientes) {
        <tr>
            <td>
                @cliente.ID
            </td>
            <td>
                @cliente.NombreCompleto
            </td>
            <td>
                <a asp-action="editar" href="" asp-route-id="@cliente.ID">Editar</a> |
                    <a asp-action="eliminar" href="" asp-route-id="@cliente.ID">Eliminar</a> |
            </td>
        </tr>
}
    </tbody>
</table>

@code {
    private List<Person> clientes = new();

    protected override async Task OnInitializedAsync()
    {
        clientes = await ClientesController.ListarClientes() ;
    }
}
